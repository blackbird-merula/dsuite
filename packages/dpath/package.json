{
  "name": "@dsuite/dpath",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build:types": "tsc -p ./tsconfig.dist.json",
    "build:esbuild": "esbuild src/**/*.ts --outdir=dist",
    "build": "npm run build:types && npm run build:esbuild",
    "test": "node --no-warnings --loader @esbuild-kit/esm-loader --test test/*.test.ts",
    "lint": "biome ci"
  },
  "dependencies": {
    "@dsuite/core": "*"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@types/bun": "^1.1.6",
    "typescript": "^5.2.2"
  }
}
